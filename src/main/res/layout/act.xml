<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mein">

    <include
        layout="@layout/men2"
       />


    <ImageButton
        android:id="@+id/imageButton56"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="67dp"
        app:srcCompat="@drawable/c" />

    <Button
        android:id="@+id/button56"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButton56"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="58dp"
        android:text="SAVE PDF" />

    <ImageButton
        android:id="@+id/imageButton57"
        android:layout_width="45dp"
        android:layout_height="46dp"
        android:layout_alignBottom="@+id/imageButton56"
        android:layout_alignParentStart="true"
        android:layout_marginStart="127dp"
        app:srcCompat="@drawable/s" />

    <ScrollView
        android:id="@+id/scrollView56"
        android:layout_width="350dp"
        android:layout_height="404dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/textt"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:textAppearance="@android:style/TextAppearance"
                android:textIsSelectable="true"
                android:background="@drawable/des"
                android:gravity="top"
                tools:layout_editor_absoluteX="match_parent"
                tools:layout_editor_absoluteY="match_parent" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>